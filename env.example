# Sophos Central API Credentials
# Copy this file to .env.local and fill in your actual credentials
# Note: NEXT_PUBLIC_ prefix is required for Next.js client-side access

# Sophos Central API Client ID
NEXT_PUBLIC_SOPHOS_CLIENT_ID=your_client_id_here

# Sophos Central API Client Secret
NEXT_PUBLIC_SOPHOS_CLIENT_SECRET=your_client_secret_here

# Sophos Tenant ID
NEXT_PUBLIC_SOPHOS_TENANT_ID=your_tenant_id_here

# Optional: Sophos region (us01, eu01, ap01, etc.) - defaults to us01
NEXT_PUBLIC_SOPHOS_REGION=us01

# Optional: Set to 'true' to force using mock data even with credentials configured
NEXT_PUBLIC_USE_MOCK_DATA=false 